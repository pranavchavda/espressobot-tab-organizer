{
  "manifest_version": 3,
  "name": "EspressoBot Tab Organizer",
  "version": "1.0.0",
  "description": "Intelligently categorize and group open tabs using AI.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "optional_permissions": [
    "tabGroups"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Organize Tabs"
  }
}
